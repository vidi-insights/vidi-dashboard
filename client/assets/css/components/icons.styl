/*--------------------------------------------------------------------
*
* ICONS
*
--------------------------------------------------------------------*/

.icon
  display: inline-block
  height: 21px
  width: 21px
  background-repeat: no-repeat
  background-size: contain
  
a.icon
  transition: all 0.5s ease-in
  
  &:hover
    opacity: 0.5

.icon-menu
  background-image: url("../img/icon-menu.svg")

.icon-profile
  width: 10px
  background-image: url("../img/icon-profile.svg")
  
.has-icon-profile
  
  &:hover .icon-profile
    background-image: url("../img/icon-profile-hover.svg")

.icon-bug
  width: 17px
  height: 16px
  background-image: url("../img/icon-bug.svg")

.icon-graph
  width: 19px
  height: 20px
  background-image: url("../img/icon-graph.svg")

.icon-signin
  width: 16px
  background-image: url("../img/icon-signin.svg")

.icon-signout
  background-image: url("../img/icon-signout.svg")
  
.icon-refresh-blue
  position: relative
  top: 4px
  margin-right: $ui-spacing-half
  background-image: url("../img/icon-refresh-blue.svg")
  
.icon-collapse,
.icon-expand
  position: relative
  top: 7px
  
.icon-collapse
  background-image: url("../img/icon-collapse.svg")
  
.icon-expand
  background-image: url("../img/icon-expand.svg")
  
.has-icon-signout
  
  &:hover .icon-signout
    background-image: url("../img/icon-signout-hover.svg")

.icon-dimmed
  opacity: .5
  transition: opacity .5s ease-in
  
  &:hover
    opacity: 1
    
.icon-github
  background-image: url("../img/icon-github.svg")
  
.icon-google
  background-image: url("../img/icon-google.svg")
  
.icon-twitter
  background-image: url("../img/icon-twitter.svg")

// Container with an icon

.has-icon

  *
    display: inline-block
    
  .icon
    top: 4px
    
    &.icon-twitter
      top: 7px
    
  .logo
    top: 5px

  .icon, .logo
    position: relative
    margin-right: 10px