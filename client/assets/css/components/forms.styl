/*--------------------------------------------------------------------
*
* FORMS
*
--------------------------------------------------------------------*/

// Shared
input, select
  border: $ui-border
  border-radius: $ui-radius
  padding: $ui-spacing-third
  transition: all .3s ease-in
  
  &:focus
    border: 1px solid $blue-light
    box-shadow: 0 0 5px $blue-light
    outline: none

// Inputs
input
  margin-right: $ui-spacing-third

.input-large
  padding: $ui-spacing-half $ui-spacing-third
  
// Form panel
.form-panel
  padding: $ui-spacing
  border: $ui-border
  border-radius: $ui-radius
  
// Full width form
.form-full-width

  input, .btn:not(.btn-secondary)
    width: 100%
    margin-bottom: $ui-spacing-third
    
  .btn-secondary:not(:last-of-type)
    margin-right: $ui-spacing-third
    
// Selects
select
  margin-top: $ui-spacing-fourth
  height: 48px
  min-width: 150px
  cursor: pointer
  background-color: white
  
// Search
.search-input-wrapper
  position: relative

input[type="search"]
  width: 100%
  box-sizing: border-box

.search-wrapper
  margin: $ui-spacing 0
  
  *[class^="col"]
    padding: 0

@media screen and (max-width: 48em)

  input[type=search]
    box-sizing: border-box
    margin-bottom: $ui-spacing-third
    
  select,
  input[type=search]
    width: 100%

@media screen and (min-width: 31em) and (max-width: 48em)

  input[type=search]
    min-width: 180px
    
  select
    margin-top: 10px

@media screen and (min-width: 49em)

  input[type="search"]
    min-width: 350px
    
  .search-btn-wrapper .btn
    margin-left: $ui-spacing-half

@media screen and (min-width: 75em)
  input[type=search]
    min-width: 450px
